# ===========================================
# App Configuration
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# Database (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your_password

# For production (Render provides this):
# DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# JWT Configuration
# Generate secrets with: openssl rand -hex 32
# ===========================================
JWT_SECRET=your_jwt_secret_here_generate_with_openssl
JWT_REFRESH_SECRET=your_refresh_secret_here_generate_with_openssl
SESSION_SECRET=your_session_secret_here_generate_with_openssl
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# Google OAuth
# https://console.cloud.google.com
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# ===========================================
# Facebook OAuth
# https://developers.facebook.com
# ===========================================
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/auth/facebook/callback

# ===========================================
# Email Service (Resend)
# https://resend.com
# ===========================================
RESEND_API_KEY=
EMAIL_FROM=MyApp <noreply@mydomain.com>

# ===========================================
# Frontend URL
# ===========================================
FRONTEND_URL=http://localhost:5173
